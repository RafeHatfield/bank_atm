<!DOCTYPE html>
<html>
<head>
  <title>BankAtm</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <%= content_tag :span, :id => "flash_#{name}", class: 'alert alert-warning' do %>
      <%= msg %>
    <% end %>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
